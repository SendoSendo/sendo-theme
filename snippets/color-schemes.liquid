{%- comment -%}Generate CSS classes for each color scheme from settings{%- endcomment -%}

<style>
  {%- for scheme in settings.color_schemes -%}
    {%- assign scheme_id = scheme[0] -%}
    {%- assign s = scheme[1].settings -%}
    .color-scheme-{{ scheme_id }} {
      --color-background: {{ s.background }};
      --color-text: {{ s.text }};
      --color-heading: {{ s.heading }};
      --color-button: {{ s.button }};
      --color-button-label: {{ s.button_label }};
      --color-secondary-button-label: {{ s.secondary_button_label }};
      --color-accent: {{ s.accent }};
      --color-shadow: {{ s.shadow }};
      {%- if s.background_gradient != blank -%}
        --color-background-gradient: {{ s.background_gradient }};
      {%- endif -%}
    }
  {%- endfor -%}
</style>
