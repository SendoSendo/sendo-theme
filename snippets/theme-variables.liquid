<style>
  :root {
    --page-width: {{ settings.page_width }}px;
    --font-size-body: {{ settings.body_font_size }}px;
    {%- if settings.font_heading -%}
      --font-heading-family: {{ settings.font_heading.family }}, system-ui, sans-serif;
      --font-heading-weight: {{ settings.font_heading.weight }};
      --font-heading-style: {{ settings.font_heading.style }};
    {%- endif -%}
    {%- if settings.font_body -%}
      --font-body-family: {{ settings.font_body.family }}, system-ui, sans-serif;
      --font-body-weight: {{ settings.font_body.weight }};
      --font-body-style: {{ settings.font_body.style }};
    {%- endif -%}
  }
</style>
