{%- comment -%}
  Section padding helper. Outputs inline style for section spacing.
  Usage: <div {% render 'util-section-spacing', padding_top: section.settings.padding_top, padding_bottom: section.settings.padding_bottom %}>

  Sections should define these settings:
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "default": 40, "label": "Top padding" }
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "default": 40, "label": "Bottom padding" }
{%- endcomment -%}

{%- liquid
  assign pt = padding_top | default: 40
  assign pb = padding_bottom | default: 40
-%}

style="padding-top: {{ pt }}px; padding-bottom: {{ pb }}px;"
