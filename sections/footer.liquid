{%- liquid
  assign color_scheme = section.settings.color_scheme
-%}

{{ 'component-footer.css' | asset_url | stylesheet_tag }}

<footer class="footer color-scheme-{{ color_scheme }}" role="contentinfo" data-section-id="{{ section.id }}">
  <div class="footer__inner page-width">
    {%- if section.blocks.size > 0 -%}
      <div class="footer__grid">
        {%- for block in section.blocks -%}
          <div class="footer__block" {{ block.shopify_attributes }}>
            {%- case block.type -%}

              {%- when 'menu' -%}
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.menu != blank -%}
                  <ul class="footer__links">
                    {%- for link in linklists[block.settings.menu].links -%}
                      <li>
                        <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}

              {%- when 'newsletter' -%}
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <p class="footer__text">{{ block.settings.text }}</p>
                {%- endif -%}
                {%- form 'customer', class: 'footer__newsletter form--inline' -%}
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  {%- if form.errors -%}
                    <div class="form__message form__message--error">{{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}</div>
                  {%- endif -%}
                  {%- if form.posted_successfully? -%}
                    <div class="form__message form__message--success">{{ 'general.newsletter.confirmation' | t | default: 'Thanks for subscribing!' }}</div>
                  {%- endif -%}
                  <label for="footer-email-{{ section.id }}" class="visually-hidden">{{ 'general.newsletter.email_placeholder' | t | default: 'Email' }}</label>
                  <input
                    type="email"
                    id="footer-email-{{ section.id }}"
                    name="contact[email]"
                    placeholder="{{ 'general.newsletter.email_placeholder' | t | default: 'Your email address' }}"
                    autocomplete="email"
                    required
                  >
                  <button type="submit" class="btn btn--primary btn--sm">
                    {{ block.settings.button_text | default: 'Subscribe' }}
                  </button>
                {%- endform -%}

              {%- when 'rich_text' -%}
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                <div class="footer__text rte">{{ block.settings.text }}</div>

              {%- when 'brand' -%}
                <div class="footer__brand">
                  {%- if settings.logo != blank -%}
                    <img
                      src="{{ settings.logo | image_url: width: 200 }}"
                      alt="{{ shop.name | escape }}"
                      width="{{ settings.logo_width | default: 120 }}"
                      loading="lazy"
                      class="footer__logo"
                    >
                  {%- else -%}
                    <span class="footer__store-name">{{ shop.name }}</span>
                  {%- endif -%}
                  {%- if block.settings.text != blank -%}
                    <p class="footer__text">{{ block.settings.text }}</p>
                  {%- endif -%}
                </div>

              {%- when 'social' -%}
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                <div class="footer__social">
                  {%- if settings.social_facebook_link != blank -%}
                    <a href="{{ settings.social_facebook_link }}" target="_blank" rel="noopener" aria-label="Facebook" class="footer__social-link">
                      {%- render 'util-icon', icon: 'share', size: 20 -%}
                    </a>
                  {%- endif -%}
                  {%- if settings.social_instagram_link != blank -%}
                    <a href="{{ settings.social_instagram_link }}" target="_blank" rel="noopener" aria-label="Instagram" class="footer__social-link">
                      {%- render 'util-icon', icon: 'share', size: 20 -%}
                    </a>
                  {%- endif -%}
                  {%- if settings.social_twitter_link != blank -%}
                    <a href="{{ settings.social_twitter_link }}" target="_blank" rel="noopener" aria-label="X / Twitter" class="footer__social-link">
                      {%- render 'util-icon', icon: 'share', size: 20 -%}
                    </a>
                  {%- endif -%}
                  {%- if settings.social_tiktok_link != blank -%}
                    <a href="{{ settings.social_tiktok_link }}" target="_blank" rel="noopener" aria-label="TikTok" class="footer__social-link">
                      {%- render 'util-icon', icon: 'share', size: 20 -%}
                    </a>
                  {%- endif -%}
                </div>
            {%- endcase -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

    <div class="footer__bottom">
      <p class="footer__copy">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'general.footer.rights' | t | default: 'All rights reserved.' }}</p>

      <div class="footer__bottom-end">
        {%- if section.settings.show_currency_selector -%}
          {%- render 'currency-selector' -%}
        {%- endif -%}

        {%- if section.settings.show_payment_icons -%}
          <div class="footer__payment">
            {%- for type in shop.enabled_payment_types -%}
              {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "class": "footer-section",
  "max_blocks": 6,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_currency_selector",
      "label": "Show currency/language selector",
      "default": true,
      "info": "Only shows when multiple countries or languages are configured in Shopify Markets"
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "link_list", "id": "menu", "label": "Menu" }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading", "default": "Newsletter" },
        { "type": "richtext", "id": "text", "label": "Description" },
        { "type": "text", "id": "button_text", "label": "Button text", "default": "Subscribe" }
      ]
    },
    {
      "type": "rich_text",
      "name": "Rich text",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "richtext", "id": "text", "label": "Text" }
      ]
    },
    {
      "type": "brand",
      "name": "Brand",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "text", "label": "Description" }
      ]
    },
    {
      "type": "social",
      "name": "Social media",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading", "default": "Follow us" }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "brand",
        "settings": { "text": "Modern commerce, delivered." }
      },
      {
        "type": "menu",
        "settings": { "heading": "Quick links" }
      },
      {
        "type": "menu",
        "settings": { "heading": "Info" }
      },
      {
        "type": "newsletter",
        "settings": { "heading": "Newsletter", "text": "<p>Subscribe for updates and exclusive offers.</p>" }
      }
    ]
  }
}
{% endschema %}
