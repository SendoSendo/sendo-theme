<section class="search-results section color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <h1 class="section__title">Search</h1>
    {%- if search.performed and search.results_count > 0 -%}
      <ul class="product-grid product-grid--4">
        {%- for item in search.results -%}
          {%- if item.object_type == 'product' -%}
            <li class="product-grid__item">
              <article class="product-card">
                <a href="{{ item.url }}" class="product-card__link"><span class="visually-hidden">{{ item.title }}</span></a>
                <div class="product-card__media">
                  {%- if item.featured_image != blank -%}
                    <img src="{{ item.featured_image | image_url: width: 500 }}" alt="{{ item.featured_image.alt | default: item.title | escape }}" width="500" height="{{ 500 | divided_by: item.featured_image.aspect_ratio | round }}" loading="lazy">
                  {%- endif -%}
                </div>
                <div class="product-card__info">
                  <h3 class="product-card__title">{{ item.title }}</h3>
                  {%- render 'price', product: item -%}
                </div>
              </article>
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>
    {%- elsif search.performed -%}
      <p>No results for "{{ search.terms | escape }}".</p>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Search results",
  "settings": [
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme" }
  ]
}
{% endschema %}
