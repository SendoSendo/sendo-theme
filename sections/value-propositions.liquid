{%- liquid
  assign color_scheme = section.settings.color_scheme
-%}

{{ 'component-value-props.css' | asset_url | stylesheet_tag }}

{%- if section.blocks.size > 0 -%}
  <section
    class="section value-props color-scheme-{{ color_scheme }}"
    data-section-id="{{ section.id }}"
    {% render 'util-section-spacing', padding_top: section.settings.padding_top, padding_bottom: section.settings.padding_bottom %}
  >
    <div class="page-width">
      <div class="value-props__grid{% if section.settings.show_dividers %} value-props__grid--dividers{% endif %}">
        {%- for block in section.blocks -%}
          <div class="value-props__item" {{ block.shopify_attributes }}>
            {%- if block.settings.icon != 'none' -%}
              <div class="value-props__icon">
                {%- render 'util-icon', icon: block.settings.icon, size: 28 -%}
              </div>
            {%- endif -%}
            <div class="value-props__text">
              {%- if block.settings.heading != blank -%}
                <h3 class="value-props__heading">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.text != blank -%}
                <p class="value-props__description">{{ block.settings.text }}</p>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </section>
{%- endif -%}

{% schema %}
{
  "name": "Value propositions",
  "class": "value-props-section",
  "settings": [
    {
      "type": "checkbox", "id": "show_dividers", "label": "Show dividers between items", "default": true
    },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-2" },
    { "type": "range", "id": "padding_top", "label": "Top padding", "min": 0, "max": 100, "step": 4, "default": 20, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Bottom padding", "min": 0, "max": 100, "step": 4, "default": 20, "unit": "px" }
  ],
  "blocks": [
    {
      "type": "proposition",
      "name": "Proposition",
      "settings": [
        {
          "type": "select", "id": "icon", "label": "Icon",
          "options": [
            { "value": "none", "label": "None" },
            { "value": "truck", "label": "Shipping" },
            { "value": "return", "label": "Returns" },
            { "value": "lock", "label": "Secure" },
            { "value": "star", "label": "Quality" },
            { "value": "gift", "label": "Gift" },
            { "value": "check", "label": "Guarantee" },
            { "value": "heart", "label": "Favorite" }
          ],
          "default": "truck"
        },
        { "type": "text", "id": "heading", "label": "Heading", "default": "Free Shipping" },
        { "type": "text", "id": "text", "label": "Description", "default": "On orders over $50" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Value propositions",
      "blocks": [
        { "type": "proposition", "settings": { "icon": "truck", "heading": "Free Shipping", "text": "On orders over $50" } },
        { "type": "proposition", "settings": { "icon": "return", "heading": "Easy Returns", "text": "30-day return policy" } },
        { "type": "proposition", "settings": { "icon": "lock", "heading": "Secure Checkout", "text": "100% protected payments" } },
        { "type": "proposition", "settings": { "icon": "star", "heading": "Top Quality", "text": "Curated products only" } }
      ]
    }
  ]
}
{% endschema %}
