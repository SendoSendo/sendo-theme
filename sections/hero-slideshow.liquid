{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign color_scheme = section.settings.color_scheme
  assign height = section.settings.height
  assign autoplay = section.settings.autoplay_speed
-%}

<div class="hero-slideshow color-scheme-{{ color_scheme }}" data-section-id="{{ section.id }}">
  <slider-component data-autoplay="{{ autoplay | times: 1000 }}" data-loop>
    <div class="slider__track" data-slider-track>
      {%- for block in section.blocks -%}
        <div class="slider__slide slideshow__slide" style="min-height: {{ height }}vh;" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <div class="slideshow__media">
              {%- render 'util-responsive-image',
                image: block.settings.image,
                sizes: '100vw',
                widths: '720,1080,1440,1920',
                loading: forloop.first | default: 'eager',
                fetchpriority: forloop.first | ternary: 'high', nil
              -%}
            </div>
          {%- else -%}
            <div class="slideshow__media" style="background: var(--color-surface);"></div>
          {%- endif -%}

          <div class="slideshow__overlay" style="--slideshow-overlay: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"></div>

          <div class="slideshow__content page-width" style="text-align: {{ block.settings.text_alignment }};">
            {%- if block.settings.subheading != blank -%}
              <p class="slideshow__subheading uppercase text-sm" style="color: #ffffff; opacity: 0.8; margin-bottom: var(--spacing-sm);">{{ block.settings.subheading }}</p>
            {%- endif -%}
            {%- if block.settings.heading != blank -%}
              <h2 class="slideshow__heading section__title" style="color: #ffffff;">{{ block.settings.heading }}</h2>
            {%- endif -%}
            {%- if block.settings.text != blank -%}
              <p class="slideshow__text" style="color: #ffffff; opacity: 0.9; margin-top: var(--spacing-sm);">{{ block.settings.text }}</p>
            {%- endif -%}
            {%- if block.settings.button_label != blank -%}
              <div class="slideshow__buttons" style="margin-top: var(--spacing-lg);">
                <a href="{{ block.settings.button_link }}" class="btn btn--primary btn--lg">{{ block.settings.button_label }}</a>
                {%- if block.settings.button_label_2 != blank -%}
                  <a href="{{ block.settings.button_link_2 }}" class="btn btn--secondary btn--lg" style="border-color: #fff; color: #fff;">{{ block.settings.button_label_2 }}</a>
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>

    {%- if section.blocks.size > 1 -%}
      <button class="slider__nav slider__nav--prev" data-slider-prev aria-label="{{ 'accessibility.previous' | t | default: 'Previous' }}">
        {%- render 'util-icon', icon: 'chevron-left', size: 20 -%}
      </button>
      <button class="slider__nav slider__nav--next" data-slider-next aria-label="{{ 'accessibility.next' | t | default: 'Next' }}">
        {%- render 'util-icon', icon: 'chevron-right', size: 20 -%}
      </button>
      <div class="slider__dots" data-slider-dots></div>
    {%- endif -%}
  </slider-component>
</div>

<script src="{{ 'component-slider.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Slideshow",
  "class": "hero-slideshow-section",
  "max_blocks": 6,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-4"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Slide height",
      "min": 40,
      "max": 100,
      "step": 5,
      "default": 70,
      "unit": "vh"
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Change slides every",
      "min": 3,
      "max": 10,
      "step": 1,
      "default": 5,
      "unit": "s"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "range", "id": "overlay_opacity", "label": "Overlay opacity", "min": 0, "max": 80, "step": 5, "default": 30, "unit": "%" },
        { "type": "text", "id": "subheading", "label": "Subheading", "default": "New Collection" },
        { "type": "text", "id": "heading", "label": "Heading", "default": "Summer Essentials" },
        { "type": "text", "id": "text", "label": "Description" },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "right", "label": "Right" }
          ],
          "default": "center"
        },
        { "type": "text", "id": "button_label", "label": "Button label", "default": "Shop now" },
        { "type": "url", "id": "button_link", "label": "Button link" },
        { "type": "text", "id": "button_label_2", "label": "Second button label" },
        { "type": "url", "id": "button_link_2", "label": "Second button link" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "blocks": [
        { "type": "slide", "settings": { "heading": "Welcome to Sendo", "subheading": "Premium Collection", "button_label": "Shop now" } },
        { "type": "slide", "settings": { "heading": "New Arrivals", "subheading": "Just Dropped", "button_label": "Explore" } }
      ]
    }
  ]
}
{% endschema %}
