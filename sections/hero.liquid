{%- liquid
  assign scheme = section.settings.color_scheme
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign button_label = section.settings.button_label
  assign button_link = section.settings.button_link
  assign image = section.settings.image
-%}
<section class="hero section color-{{ scheme }}" aria-labelledby="hero-heading">
  <div class="hero__inner page-width">
    <div class="hero__content">
      {%- if heading != blank -%}
        <h1 id="hero-heading" class="hero__title">{{ heading }}</h1>
      {%- endif -%}
      {%- if subheading != blank -%}
        <p class="hero__subtitle">{{ subheading }}</p>
      {%- endif -%}
      {%- if button_label != blank and button_link != blank -%}
        <a href="{{ button_link }}" class="button button--primary hero__cta">{{ button_label }}</a>
      {%- endif -%}
    </div>
    {%- if image != blank -%}
      <div class="hero__media">
        <img
          src="{{ image | image_url: width: 800 }}"
          alt="{{ image.alt | default: heading | escape }}"
          width="800"
          height="{{ 800 | divided_by: image.aspect_ratio | round }}"
          loading="eager"
          fetchpriority="high"
        >
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Welcome to Sendo" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Discover our collection." },
    { "type": "text", "id": "button_label", "label": "Button label", "default": "Shop now" },
    { "type": "url", "id": "button_link", "label": "Button link" },
    { "type": "image_picker", "id": "image", "label": "Image" }
  ]
}
{% endschema %}
